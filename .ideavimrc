" --- SET
set scrolloff=8
set incsearch
set nu
set ignorecase
set smartcase
set NERDTree


" --- REMAPS
let mapleader=" "
" Moving indent as much as you want
vmap < <gv
vmap > >gv
" Moving selected text up and down
vmap J :m '>+1<CR>gv=gv
vmap K :m '<-2<CR>gv=gv
" Keeping search results at the center
nmap n nzzzv
nmap N Nzzzv
" So paste over doesn't change buffer
nmap <leader>d "_d
nmap <leader>d "_d
xmap p "_dP
" better yap
map <leader>y "+y
" Don't use Ex mode, use Q for formatting.
map Q gq

" --- IDEA REMAPS
map <leader>rr <Action>(RenameElement)
nmap <leader>fu :action FindUsages<cr>
nmap <leader>fc :action GotoClass<cr>
nmap <leader>fi :action GotoImplementation<cr>
nmap <leader>fsm :action GotoSuperMethod<cr>

map <leader>pv :NERDTree<CR>

" --- Enable IdeaVim plugins https://jb.gg/ideavim-plugins
" Highlight copied text
Plug 'machakann/vim-highlightedyank'
" Commentary plugin
Plug 'tpope/vim-commentary'

